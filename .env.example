# Armora Protection Services - Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control

# ====================
# SUPABASE CONFIGURATION
# ====================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
REACT_APP_SUPABASE_URL=https://your-project-ref.supabase.co
REACT_APP_SUPABASE_ANON_KEY=your_supabase_anonymous_key_here

# For Next.js compatibility (if needed)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anonymous_key_here

# ====================
# FIREBASE CONFIGURATION
# ====================
# Get these from: https://console.firebase.google.com/project/armora-protection/settings/general
REACT_APP_FIREBASE_API_KEY=your_firebase_api_key_here
REACT_APP_FIREBASE_AUTH_DOMAIN=armora-protection.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=armora-protection
REACT_APP_FIREBASE_STORAGE_BUCKET=armora-protection.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
REACT_APP_FIREBASE_APP_ID=your_app_id_here

# Firebase Cloud Messaging VAPID Key (for push notifications)
# Get from: Firebase Console → Project Settings → Cloud Messaging → Web Push Certificates
REACT_APP_FIREBASE_VAPID_KEY=your_vapid_key_here

# ====================
# STRIPE PAYMENT CONFIGURATION
# ====================
# Get from: https://dashboard.stripe.com/test/apikeys

# Client-side publishable key (safe to expose in frontend)
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Server-side secret key (NEVER expose in frontend - used in Edge Functions only)
# This should be set in Supabase Edge Function secrets, NOT in React app
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Stripe webhook secret for signature verification
# Get from: https://dashboard.stripe.com/test/webhooks
# This should be set in Supabase Edge Function secrets
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ====================
# GOOGLE MAPS CONFIGURATION
# ====================
# Get from: https://console.cloud.google.com/google/maps-apis/credentials
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# ====================
# SECURITY CONFIGURATION
# ====================
REACT_APP_ENABLE_MARTYNS_LAW=true
REACT_APP_SIA_VERIFICATION_REQUIRED=true
REACT_APP_PANIC_BUTTON_ENABLED=true

# ====================
# SERVICE CONFIGURATION
# ====================
REACT_APP_SERVICE_NAME=Armora Protection Service
REACT_APP_BASE_RATE_ESSENTIAL=65
REACT_APP_BASE_RATE_EXECUTIVE=95
REACT_APP_BASE_RATE_SHADOW=125
REACT_APP_CLIENT_VEHICLE_RATE=55
REACT_APP_MINIMUM_HOURS=2
REACT_APP_SUBSCRIPTION_PRICE=14.99
REACT_APP_SUBSCRIPTION_DISCOUNT=50

# ====================
# OPTIONAL: DEVELOPMENT OVERRIDES
# ====================
# Uncomment and set these for local development customization

# Custom API endpoint (if using local Supabase instance)
# REACT_APP_API_BASE_URL=http://localhost:3001

# Environment
NODE_ENV=development

# Development UI Configuration
REACT_APP_DISABLE_ERROR_OVERLAY=true

# Enable debug logging
# REACT_APP_DEBUG=true

# Mock data for testing (bypasses real API calls)
# REACT_APP_USE_MOCK_DATA=false

# ====================
# EDGE FUNCTION SECRETS (Supabase Only)
# ====================
# These variables should NOT be in your frontend .env files
# Set them in Supabase Edge Function secrets:
#
# Method 1: Via Supabase CLI
# supabase secrets set STRIPE_SECRET_KEY=sk_test_...
# supabase secrets set STRIPE_WEBHOOK_SECRET=whsec_...
# supabase secrets set SUPABASE_SERVICE_ROLE_KEY=eyJhbGc...
#
# Method 2: Via Supabase Dashboard
# Dashboard → Edge Functions → Secrets → Add Secret
#
# Required secrets:
# - STRIPE_SECRET_KEY (for payment processing)
# - STRIPE_WEBHOOK_SECRET (for webhook signature verification)
# - SUPABASE_SERVICE_ROLE_KEY (for admin-level database operations)
# - SUPABASE_URL (automatically set by Supabase)
# - SUPABASE_ANON_KEY (automatically set by Supabase)

# ====================
# NOTES
# ====================
# 1. After creating .env.local, restart your development server
# 2. All REACT_APP_* variables are embedded in the build
# 3. Never expose secret keys in frontend - use Edge Functions for sensitive operations
# 4. For Vercel deployment, set these in: Project Settings → Environment Variables
# 5. Supabase automatically provides SUPABASE_URL and SUPABASE_ANON_KEY to Edge Functions
