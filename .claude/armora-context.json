    "file_structure_organizer": "maintains organization",
    "codebase_reviewer": "AI-powered analysis",
    "subagent_manager": "coordinates specialized agents"
  },
  "subagents": {
    "mobile_tester": "responsive testing across devices",
    "pwa_optimizer": "app store preparation", 
    "ux_validator": "mobile user experience checker",
    "booking_flow_manager": "security cab booking logic",
    "server_keeper": "maintains localhost:3000 uptime"
  },
  "development_guidelines": {
    "mobile_first": "Every component must work on 320px width first",
    "no_horizontal_scroll": "CRITICAL requirement",
    "armora_branding": "Maintain dark theme with golden accents",
