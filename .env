# Development Environment Configuration
# PORT is not set here - use PORT=xxxx npm start to specify
GENERATE_SOURCEMAP=false
FAST_REFRESH=true
ESLINT_NO_DEV_ERRORS=true
DISABLE_ESLINT_PLUGIN=false
REACT_APP_NODE_ENV=development

# Enhanced hot reload and instant change detection
SKIP_PREFLIGHT_CHECK=true
CHOKIDAR_USEPOLLING=true
CHOKIDAR_INTERVAL=1000
WATCHPACK_POLLING=true
WDS_SOCKET_HOST=localhost
# WDS_SOCKET_PORT will auto-detect from PORT
WDS_SOCKET_PATH=/ws

# Optimize for instant updates
BROWSER=none
TSC_COMPILE_ON_ERROR=true
REACT_APP_HOT_RELOAD=true

# Supabase Configuration (example - replace with your values)
# REACT_APP_SUPABASE_URL=your_supabase_url
# REACT_APP_SUPABASE_ANON_KEY=your_supabase_anon_key